{% extends 'base.html.twig' %} {% block body %}
<h1>Our offer</h1>
<div class="pull-right">
    {{form_start(form, {attr:{class:'form-inline'}})}} {{form_widget(form.search,{attr:{placeholder:'Enter your search query'}})}}
    <button type="submit" class="btn">Submit</button>
    {{form_end(form)}} {{form_errors(form.search)}}
    <br>
</div>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Make</th>
        <th>Actions</th>
    </tr>
    {% for car in cars %}
    <tr>
        <td>{{car.model.name}}</td>
        <td>{{car.make.name}}</td>
        <td>
            <a href="{{url('show_car',{id:car.id})}}">Show details</a>
        </td>
    </tr>
    {% endfor %}
</table>
{% endblock %}