{% extends 'base.html.twig' %} {% block body %}
<a href="{{url('car')}}">
    <-- Back</a>
        <h1>{{car.make.name}} - {{car.model.name}}</h1>
        <p>{{car.description}}</p>
        <table class="table">
            <tr>
                <td>Price</td>
                <td>{{car.price}}</td>
            </tr>
            <tr>
                <td>Year</td>
                <td>{{car.year}}</td>
            </tr>
            <tr>
                <td>Navigation System</td>
                <td>
                    {% if car.navigation %}
                    <span class="glyphicon glyphicon-ok"></span>
                    {% else %}
                    <span class="glyphicon glyphicon-remove"></span>
                    {% endif %}
                </td>
            </tr>
        </table>
        {% endblock %}